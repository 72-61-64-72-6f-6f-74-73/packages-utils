{
    "compilerOptions": {
        "strict": true,
        "target": "es2021",
        "lib": [
            "es2021",
            "dom"
        ],
        "module": "ESNext",
        "moduleResolution": "node",
        "declaration": true,
        "declarationMap": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "$root": ["src/index.js"]
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
}